<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">


    <ImageView
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:id="@+id/image"
        android:src="@drawable/logo"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/image"
        android:layout_marginLeft="15dp"
        android:id="@+id/upperCard"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp">

            <EditText
                android:id="@+id/drname"
                android:layout_width="155dp"
                android:layout_height="50dp"
                android:background="@drawable/border"
                android:hint="Doctor name"
                android:paddingLeft="15dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/password"
                android:layout_width="205dp"
                android:layout_height="59dp"
                android:layout_below="@+id/drname"
                app:passwordToggleDrawable="@drawable/icon"
                app:passwordToggleEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/vpassword"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email"
                    android:background="@drawable/border"
                    android:hint="Password "
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="15dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/repassword"
                android:layout_width="155dp"
                android:layout_height="59dp"
                android:layout_below="@id/password"
                app:passwordToggleDrawable="@drawable/icon"
                app:passwordToggleEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/vrepassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/password"
                    android:background="@drawable/border"
                    android:hint="rePassword "

                    android:inputType="textPassword"
                    android:maxLines="1"

                    android:padding="15dp" />
            </android.support.design.widget.TextInputLayout>


            <EditText
                android:id="@+id/email"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@id/repassword"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:hint="email "
                android:inputType="text"
                android:maxLines="1"
                android:padding="15dp" />

            <EditText
                android:id="@+id/contact"
                android:layout_width="300dp"
                android:layout_marginTop="5dp"
                android:layout_height="50dp"
                android:layout_below="@+id/email"
                android:background="@drawable/border"
                android:hint="Contact "
                android:inputType="text"
                android:maxLines="1"

                android:padding="15dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/Imageprev"
                android:layout_width="120dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="3dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/cpic"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_below="@+id/Imageprev"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/repassword"
                android:background="@drawable/button"
                android:text="Click" />

            <Button
                android:id="@+id/up"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_below="@+id/password"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/cpic"
                android:background="@drawable/button"
                android:padding="7dp"
                android:text="Upload" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvOther"
        android:layout_marginTop="15dp"
        android:text="Other Details"
        android:layout_below="@+id/upperCard"
        android:textSize="15sp"
        android:layout_marginLeft="25dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvOther"
        android:layout_marginLeft="15dp"
        android:id="@+id/lowerCard"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

        <EditText
            android:id="@+id/clnk"
            android:layout_width="305dp"
            android:layout_height="50dp"
            android:background="@drawable/border"
            android:hint="Clinic name"
            android:paddingLeft="15dp" />
            <EditText
                android:id="@+id/address"
                android:layout_below="@id/clnk"
                android:layout_marginTop="10dp"
                android:layout_width="305dp"
                android:layout_height="50dp"
                android:background="@drawable/border"
                android:hint="Address"
                android:paddingLeft="15dp" />
            <EditText
                android:id="@+id/education"
                android:layout_width="305dp"
                android:layout_marginTop="10dp"
                android:layout_height="50dp"
                android:layout_below="@id/address"
                android:background="@drawable/border"
                android:hint="Qualification"
                android:paddingLeft="15dp" />


        </RelativeLayout>
        </android.support.v7.widget.CardView>


    <Button
        android:layout_width="275dp"
        android:id="@+id/button2"
        android:background="@drawable/button"
        android:layout_height="55dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/lowerCard"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:textSize="15sp"/>
</RelativeLayout>
</ScrollView>